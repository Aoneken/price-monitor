{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint",
      "type": "shell",
      // Ejecuta flake8 usando el intérprete del workspace
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "flake8", "."],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$flake8"]
    },
    {
      "label": "test",
      "type": "shell",
      // Ejecuta pytest usando el intérprete del workspace
      "command": "${config:python.defaultInterpreterPath}",
      "args": [
        "-m",
        "pytest",
        "${config:python.testing.pytestArgs}" // Usa tus args de settings.json
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "run-webapp",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["run_webapp.py"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Will watch for changes",
          "endsPattern": "Application startup complete"
        }
      }
    }
  ]
}
